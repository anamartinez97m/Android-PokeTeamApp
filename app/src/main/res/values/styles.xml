<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbarLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/md_purple_400</item>
    </style>

    <style name="loginStylesLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/md_purple_900</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:tint">@color/md_purple_500_75</item>
    </style>

    <style name="settingsStylesLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/md_purple_900</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:tint">@color/md_purple_500_75</item>
    </style>

    <style name="settingsTitlesStylesLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/md_purple_900</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:tint">@color/md_purple_500_75</item>
    </style>

    <style name="editTextStyles" parent="Theme.MaterialComponents.Light">
        <item name="android:drawableTint">@color/md_purple_400</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="buttonSaveStyles" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_save_border</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="aboutTitleStylesLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/md_purple_900</item>
    </style>

    <style name="aboutTextStylesLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/md_purple_800</item>
    </style>

    <style name="aboutLinkStylesLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorLink">@color/md_purple_500</item>
    </style>

    <style name="mainTextStylesLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="mainTextErrorStylesLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>